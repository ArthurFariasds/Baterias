@model TrocaBateriaWebApp.Models.RegisterViewModel
@{
    ViewData["Title"] = "Cadastro";
}

<div class="row justify-content-center mt-4 mb-5">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-meta">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <i class="fas fa-user-plus text-primary display-4 mb-3"></i>
                    <h2 class="card-title fw-bold">Criar Conta</h2>
                    <p class="text-muted">Junte-se à nossa comunidade</p>
                </div>

                <form asp-action="Register" method="post" id="registerForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="UserName" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-meta-card border-meta">
                                    <i class="fas fa-at text-muted"></i>
                                </span>
                                <input asp-for="UserName" class="form-control bg-meta-card border-meta text-light" placeholder="Digite seu usuário" />
                            </div>
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-meta-card border-meta">
                                    <i class="fas fa-envelope text-muted"></i>
                                </span>
                                <input asp-for="Email" class="form-control bg-meta-card border-meta text-light" placeholder="Digite seu e-mail" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NomeCompleto" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-meta-card border-meta">
                                <i class="fas fa-id-card text-muted"></i>
                            </span>
                            <input asp-for="NomeCompleto" class="form-control bg-meta-card border-meta text-light" placeholder="Digite seu nome completo ou nome da empresa" />
                        </div>
                        <span asp-validation-for="NomeCompleto" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-meta-card border-meta">
                                    <i class="fas fa-lock text-muted"></i>
                                </span>
                                <input asp-for="Password" class="form-control bg-meta-card border-meta text-light" placeholder="Digite sua senha" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-meta-card border-meta">
                                    <i class="fas fa-lock text-muted"></i>
                                </span>
                                <input asp-for="ConfirmPassword" class="form-control bg-meta-card border-meta text-light" placeholder="Confirme sua senha" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Telefone" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-meta-card border-meta">
                                <i class="fas fa-phone text-muted"></i>
                            </span>
                            <input asp-for="Telefone" class="form-control bg-meta-card border-meta text-light" placeholder="(00) 00000-0000" />
                        </div>
                        <span asp-validation-for="Telefone" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Tipo de Conta</label>
                        <div class="btn-group w-100 shadow-sm" role="group">
                            <input type="radio" class="btn-check" name="TipoConta" id="tipoUsuario" value="Usuario" checked>
                            <label class="btn btn-outline-primary" for="tipoUsuario">
                                <i class="fas fa-user me-2"></i> Sou Usuário
                            </label>

                            <input type="radio" class="btn-check" name="TipoConta" id="tipoEmpresa" value="Empresa">
                            <label class="btn btn-outline-primary" for="tipoEmpresa">
                                <i class="fas fa-building me-2"></i> Sou Empresa
                            </label>
                        </div>
                    </div>

                    <div id="camposEmpresa" class="card bg-meta-card border-meta p-3 mb-4" style="display: none;">
                        <h6 class="fw-semibold mb-3"><i class="fas fa-building me-2"></i>Informações da Empresa</h6>

                        <div class="mb-3">
                            <label asp-for="Cnpj" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-meta-card border-meta">
                                    <i class="fas fa-id-card text-muted"></i>
                                </span>
                                <input asp-for="Cnpj" class="form-control bg-meta-card border-meta text-light" placeholder="00.000.000/0000-00" />
                            </div>
                            <span asp-validation-for="Cnpj" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Endereco" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-meta-card border-meta">
                                    <i class="fas fa-map-marker-alt text-muted"></i>
                                </span>
                                <input asp-for="Endereco" class="form-control bg-meta-card border-meta text-light" placeholder="Digite o endereço completo" />
                            </div>
                            <span asp-validation-for="Endereco" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-check-circle me-2"></i> Criar Conta
                        </button>
                    </div>
                </form>

                <hr class="my-4 bg-meta">

                <div class="text-center">
                    <p class="mb-2 text-muted">Já tem uma conta?</p>
                    <a asp-action="Login" class="btn btn-outline-secondary">
                        <i class="fas fa-sign-in-alt me-2"></i> Fazer Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/register.js"></script>
}
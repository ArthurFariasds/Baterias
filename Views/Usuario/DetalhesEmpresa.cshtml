@model TrocaBateriaWebApp.Models.ApplicationUser
@{
    ViewData["Title"] = "Detalhes da Empresa";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="card card-modern">
                <div class="card-header-modern bg-primary text-light-mode">
                    <h3 class="mb-0 fw-bold">
                        <i class="fas fa-building me-2"></i> @Model.NomeCompleto
                    </h3>
                </div>
                <div class="card-body-modern">
                    <h5 class="fw-semibold mb-4"><i class="fas fa-info-circle me-2 text-primary"></i> Informações da Empresa</h5>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="fas fa-id-card text-muted me-2"></i>
                                <strong class="text-muted">CNPJ:</strong>
                                <span class="ms-2">@Model.Cnpj</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="fas fa-envelope text-muted me-2"></i>
                                <strong class="text-muted">E-mail:</strong>
                                <span class="ms-2">@Model.Email</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="fas fa-phone text-muted me-2"></i>
                                <strong class="text-muted">Telefone:</strong>
                                <span class="ms-2">@(Model.Telefone ?? "Não informado")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="fas fa-map-marker-alt text-muted me-2"></i>
                                <strong class="text-muted">Endereço:</strong>
                                <span class="ms-2">@(Model.Endereco ?? "Não informado")</span>
                            </div>
                        </div>
                    </div>

                    <hr class="bg-meta my-4">

                    <h5 class="fw-semibold mb-4"><i class="fas fa-car-battery me-2 text-primary"></i> Baterias Disponíveis</h5>

                    @if (Model.Baterias != null && Model.Baterias.Any(b => b.Quantidade > 0))
                    {
                        <div class="grid-modern">
                            @foreach (var bateria in Model.Baterias.Where(b => b.Quantidade > 0))
                            {
                                <div class="grid-item">
                                    <div class="card bg-meta-card border-meta h-100">
                                        <div class="card-body p-3">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h6 class="fw-semibold mb-0">@bateria.Nome</h6>
                                                <span class="badge-modern badge-primary">@bateria.Tipo</span>
                                            </div>
                                            <p class="text-muted small mb-3">
                                                @(bateria.Descricao ?? "Sem descrição")
                                            </p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="text-muted small">Estoque:</span>
                                                <span class="badge-modern badge-success">
                                                    <i class="fas fa-boxes me-1"></i>@bateria.Quantidade unidades
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state py-4">
                            <i class="fas fa-battery-empty empty-state-icon text-primary"></i>
                            <h5 class="fw-semibold mb-2">Nenhuma bateria disponível</h5>
                            <p class="text-muted mb-0">Esta empresa não possui baterias em estoque no momento.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card card-modern mb-4">
                <div class="card-header-modern bg-success text-light-mode">
                    <h5 class="mb-0 fw-semibold"><i class="fas fa-calendar-plus me-2"></i> Ações</h5>
                </div>
                <div class="card-body-modern">
                    <div class="d-grid gap-3">
                        <a asp-controller="Agendamento" asp-action="Create" asp-route-empresaId="@Model.Id"
                           class="btn btn-modern btn-modern-primary">
                            <i class="fas fa-calendar-check me-2"></i> Fazer Agendamento
                        </a>
                        <a asp-action="Index" class="btn btn-modern-outline">
                            <i class="fas fa-arrow-left me-2"></i> Voltar à Lista
                        </a>
                    </div>
                </div>
            </div>

            <div class="card card-modern">
                <div class="card-header-modern bg-info text-light-mode">
                    <h6 class="mb-0 fw-semibold"><i class="fas fa-tags me-2"></i> Tipos Oferecidos</h6>
                </div>
                <div class="card-body-modern">
                    @if (Model.Baterias != null && Model.Baterias.Any(b => b.Quantidade > 0))
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var tipo in Model.Baterias.Where(b => b.Quantidade > 0).Select(b => b.Tipo).Distinct())
                            {
                                <span class="badge-modern badge-primary">@tipo</span>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">
                            <i class="fas fa-info-circle me-2"></i>Nenhum tipo disponível
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
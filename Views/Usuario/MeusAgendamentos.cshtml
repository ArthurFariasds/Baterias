@model IEnumerable<TrocaBateriaWebApp.Models.Agendamento>
@{
    ViewData["Title"] = "Meus Agendamentos";
}
@section Scripts {
    <link rel="stylesheet" href="~/css/usuario.css" />
}
<div class="container mt-4">
    <div class="row mb-5">
        <div class="col">
            <div class="page-header">
                <h1 class="page-title">
                    <i class="fas fa-calendar-check me-3"></i>Meus Agendamentos
                </h1>
                <p class="page-subtitle">Acompanhe e gerencie todos os seus agendamentos</p>
            </div>
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-new-appointment">
                <i class="fas fa-plus-circle me-2"></i> Novo Agendamento
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert-modern success">
            <i class="fas fa-check-circle"></i>
            <span>@TempData["Success"]</span>
            <button type="button" class="alert-close" data-bs-dismiss="alert">
                <i class="fas fa-times"></i>
            </button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="appointments-grid">
            @foreach (var agendamento in Model)
            {
                var statusClass = agendamento.Status switch
                {
                    "Pendente" => "pending",
                    "EmAndamento" => "in-progress",
                    "Concluido" => "completed",
                    "Cancelado" => "cancelled",
                    _ => "default"
                };

                var statusTexto = agendamento.Status switch
                {
                    "Pendente" => "Pendente",
                    "EmAndamento" => "Em Andamento",
                    "Concluido" => "Concluído",
                    "Cancelado" => "Cancelado",
                    _ => agendamento.Status
                };

                var statusIcon = agendamento.Status switch
                {
                    "Pendente" => "fas fa-clock",
                    "EmAndamento" => "fas fa-cog",
                    "Concluido" => "fas fa-check-circle",
                    "Cancelado" => "fas fa-times-circle",
                    _ => "fas fa-info-circle"
                };

                <div class="appointment-card @statusClass fade-in-up">
                    <div class="appointment-header">
                        <div class="appointment-id">
                            <i class="fas fa-hashtag"></i>
                            <span>#@agendamento.Id</span>
                        </div>
                        <div class="appointment-status">
                            <i class="@statusIcon"></i>
                            <span>@statusTexto</span>
                        </div>
                    </div>

                    <div class="appointment-body">
                        <div class="company-info">
                            <div class="company-avatar">
                                <i class="fas fa-building"></i>
                            </div>
                            <div class="company-details">
                                <h3 class="company-name">@agendamento.Empresa?.NomeCompleto</h3>
                                <div class="company-contact">
                                    <span class="contact-item">
                                        <i class="fas fa-envelope"></i>
                                        @agendamento.Empresa?.Email
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="appointment-details">
                            <div class="detail-row">
                                <div class="detail-item">
                                    <i class="fas fa-car-battery"></i>
                                    <div class="detail-content">
                                        <label>Tipo de Bateria</label>
                                        <span class="battery-type">@agendamento.TipoBateria</span>
                                    </div>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(agendamento.Observacoes))
                            {
                                <div class="detail-row">
                                    <div class="detail-item full-width">
                                        <i class="fas fa-sticky-note"></i>
                                        <div class="detail-content">
                                            <label>Observações</label>
                                            <p class="observations">@agendamento.Observacoes</p>
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="timeline">
                                <div class="timeline-item">
                                    <i class="fas fa-calendar-plus"></i>
                                    <div class="timeline-content">
                                        <label>Criado em</label>
                                        <span>@agendamento.DataAgendamento.ToString("dd/MM/yyyy 'às' HH:mm")</span>
                                    </div>
                                </div>
                                <div class="timeline-item">
                                    <i class="fas fa-sync-alt"></i>
                                    <div class="timeline-content">
                                        <label>Última atualização</label>
                                        <span>@agendamento.DataAtualizacao.ToString("dd/MM/yyyy 'às' HH:mm")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="appointment-actions">
                        <a asp-controller="Agendamento" asp-action="Details" asp-route-id="@agendamento.Id"
                           class="btn btn-details">
                            <i class="fas fa-eye me-2"></i> Ver Detalhes
                        </a>
                        @if (agendamento.Status == "Pendente")
                        {
                            <form asp-controller="Agendamento" asp-action="Cancelar" asp-route-id="@agendamento.Id"
                                  method="post" onsubmit="return confirm('Tem certeza que deseja cancelar este agendamento?');">
                                <button type="submit" class="btn btn-cancel">
                                    <i class="fas fa-times me-2"></i> Cancelar
                                </button>
                            </form>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state-modern">
            <div class="empty-icon">
                <i class="fas fa-calendar-times"></i>
            </div>
            <h3 class="empty-title">Nenhum agendamento encontrado</h3>
            <p class="empty-description">Você ainda não fez nenhum agendamento. Comece agendando seu primeiro serviço!</p>
            <a asp-action="Index" class="btn btn-primary-large">
                <i class="fas fa-plus-circle me-2"></i> Fazer Primeiro Agendamento
            </a>
        </div>
    }
</div>

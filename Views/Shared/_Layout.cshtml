@using Microsoft.AspNetCore.Identity
@inject SignInManager<TrocaBateriaWebApp.Models.ApplicationUser> SignInManager
@inject UserManager<TrocaBateriaWebApp.Models.ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LEMA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TrocaBateriaWebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    @RenderSection("Styles", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container">
                @{
                    if (SignInManager.IsSignedIn(User))
                    {
                        var currentUser = await UserManager.GetUserAsync(User);
                        if (currentUser?.TipoConta == "Empresa")
                        {
                            <a class="navbar-brand fw-bold" asp-controller="Empresa" asp-action="Index">
                                <i class="fas fa-car-battery"></i> LEMA
                            </a>
                        }
                        else if (currentUser?.TipoConta == "Usuario")
                        {
                            <a class="navbar-brand fw-bold" asp-controller="Usuario" asp-action="Index">
                                <i class="fas fa-car-battery"></i> LEMA
                            </a>
                        }
                        else
                        {
                            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-car-battery"></i> LEMA
                            </a>
                        }
                    }
                    else
                    {
                        <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-car-battery"></i> LEMA
                        </a>
                    }
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var currentUser = await UserManager.GetUserAsync(User);

                            @if (currentUser?.TipoConta == "Empresa")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Empresa" asp-action="Index">
                                        <i class="fas fa-tachometer-alt me-1"></i>Menu
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Empresa" asp-action="MinhasBaterias">
                                        <i class="fas fa-battery-full me-1"></i>Minhas Baterias
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Empresa" asp-action="Agendamentos">
                                        <i class="fas fa-calendar-alt me-1"></i>Agendamentos
                                    </a>
                                </li>
                            }
                            else if (currentUser?.TipoConta == "Usuario")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Usuario" asp-action="Index">
                                        <i class="fas fa-building me-1"></i>Empresas
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Usuario" asp-action="MeusAgendamentos">
                                        <i class="fas fa-calendar-check me-1"></i>Meus Agendamentos
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i> @currentUser?.NomeCompleto
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <span class="dropdown-item-text">
                                            <small class="text-muted">
                                                <i class="fas fa-tag me-1"></i>@(currentUser?.TipoConta == "Empresa" ? "Empresa" : "Usuário")
                                            </small>
                                        </span>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    @if (currentUser?.TipoConta == "Empresa")
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Empresa" asp-action="Perfil">
                                                <i class="fas fa-user me-2"></i> Meu Perfil
                                            </a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Usuario" asp-action="Perfil">
                                                <i class="fas fa-user me-2"></i> Meu Perfil
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt me-2"></i> Sair
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i>Cadastrar
                                </a>
                            </li>
                        }
                    </ul>
                    <li class="nav-item d-flex align-items-center ms-3">
                        <button id="themeToggle" type="button" class="btn btn-outline-secondary btn-sm" aria-pressed="false"
                                onclick="window.toggleTheme && window.toggleTheme(); (function(b){b.setAttribute('aria-pressed', (b.getAttribute('aria-pressed')==='true')? 'false':'true')})(this);">
                            <i id="themeToggleIcon" class="bi bi-moon-fill" aria-hidden="true"></i>
                            <span class="visually-hidden">Alternar tema</span>
                        </button>
                    </li>

                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3" style="padding-top: 80px;">
        @RenderBody()
    </main>

    <footer class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mb-4">
                    <h5 class="fw-bold"><i class="fas fa-car-battery me-2"></i> LEMA</h5>
                    <p class="text-muted">Conectando empresas e clientes para troca de baterias de forma rápida e eficiente.</p>
                </div>
                <div class="col-md-3 mb-4">
                    <h6 class="fw-semibold">Links Rápidos</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted text-decoration-none"><i class="fas fa-info-circle me-1"></i>Sobre</a></li>
                        <li><a href="#" class="text-muted text-decoration-none"><i class="fas fa-envelope me-1"></i>Contato</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-muted text-decoration-none"><i class="fas fa-shield-alt me-1"></i>Privacidade</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h6 class="fw-semibold">Redes Sociais</h6>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-muted"><i class="fab fa-facebook fs-5"></i></a>
                        <a href="#" class="text-muted"><i class="fab fa-instagram fs-5"></i></a>
                        <a href="#" class="text-muted"><i class="fab fa-twitter fs-5"></i></a>
                    </div>
                </div>
            </div>
            <hr class="bg-secondary">
            <div class="text-center text-muted">
                <small>&copy; 2025 - LEMA - Todos os direitos reservados</small>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
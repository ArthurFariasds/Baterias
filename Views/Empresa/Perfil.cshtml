@model TrocaBateriaWebApp.Models.ApplicationUser
@{
    ViewData["Title"] = "Perfil da Empresa";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-meta">
                <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0 fw-semibold"><i class="fas fa-building me-2"></i> Perfil da Empresa</h4>
                    <button id="btnEdit" class="btn btn-outline-light btn-sm" type="button">
                        <i class="fas fa-edit me-1"></i> Editar
                    </button>
                </div>

                <div class="card-body p-4">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form id="viewMode" class="readonly-form">
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Nome da Empresa</label>
                            <input class="form-control bg-meta-card border-meta text-light" value="@Model.NomeCompleto" readonly />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">CNPJ</label>
                            <input class="form-control bg-meta-card border-meta text-light" value="@Model.Cnpj" readonly />
                            <small class="text-muted">O CNPJ não pode ser alterado</small>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">E-mail</label>
                            <input class="form-control bg-meta-card border-meta text-light" value="@Model.Email" readonly />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Telefone</label>
                            <input class="form-control bg-meta-card border-meta text-light" value="@Model.Telefone" readonly />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Endereço</label>
                            <input class="form-control bg-meta-card border-meta text-light" value="@Model.Endereco" readonly />
                        </div>

                        <div class="mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i> Voltar
                            </a>
                        </div>
                    </form>

                    <form asp-action="Perfil" method="post" id="editMode" style="display:none;">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-4">
                            <label asp-for="NomeCompleto" class="form-label fw-semibold">Nome da Empresa</label>
                            <input asp-for="NomeCompleto" class="form-control bg-meta-card border-meta text-light" />
                            <span asp-validation-for="NomeCompleto" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Cnpj" class="form-label fw-semibold">CNPJ</label>
                            <input asp-for="Cnpj" class="form-control bg-meta-card border-meta text-light" readonly />
                            <small class="text-muted">O CNPJ não pode ser alterado</small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-semibold">E-mail</label>
                            <input asp-for="Email" class="form-control bg-meta-card border-meta text-light" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Telefone" class="form-label fw-semibold">Telefone</label>
                            <input asp-for="Telefone" class="form-control bg-meta-card border-meta text-light" placeholder="(00) 00000-0000" />
                            <span asp-validation-for="Telefone" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Endereco" class="form-label fw-semibold">Endereço</label>
                            <input asp-for="Endereco" class="form-control bg-meta-card border-meta text-light" />
                            <span asp-validation-for="Endereco" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i> Salvar
                            </button>
                            <button type="button" class="btn btn-outline-secondary" id="btnCancel">
                                <i class="fas fa-times me-2"></i> Cancelar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/perfil.js"></script>
}